function applyFilters() {
  const borough = get('filter-borough').value;
  const gender = get('filter-gender').value;
  const spayneuter = get('filter-spayneuter').value;
  const year = get('filter-year').value;

  filteredData = data.filter(function(incident) {
    let matches = true;
    
    if (borough && incident.borough !== borough) matches = false;
    if (gender && incident.gender !== gender) matches = false;
    if (spayneuter && incident.spayneuter.toString() !== spayneuter) matches = false;
    if (year && incident.date_of_bite && !incident.date_of_bite.startsWith(year)) matches = false;
    
    return matches;
  });

  // Update the current analysis with filtered data
  const analysisType = get('analysis-type').value;
  const chartType = get('chart-type').value;
  changeChart();}